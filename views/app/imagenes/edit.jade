extends ../../layout.jade
block Contenido
	form(action="/app/imagenes/#{imagen.id}?_method=PUT", method="POST")
		input(type="hidden" value="PUT", name="_method")
		div(class="Container" style="width: 45%; margin: 0 auto; padding-top: 25px; border: 1px solid #A4A4A4; margin-top: 50px;")
			h1(style="margin: 0 auto; text-align: center;") Actualizar Registro 
			hr
			div(class="form-group" style="padding-left: 15px; padding-right: 15px; margin-top: 15px;")
				input(type="text", name="title", placeholder="Titulo de la imagen..." id="title" class="form-control" value="#{imagen.title}" required)
			div(class="form-group" style="padding-left: 15px; padding-right: 15px;")
				input(type="file", name="archivo", id="password", class="form-control border-none file-selector hide" placeholder="Seleccione una imagen")
			div(class="footer" style="margin-top: 75px; height: 75px; background-color: ghostwhite; padding-top: 15px; padding-left: 15px; padding-right: 15px; border-top: 1px solid #A4A4A4;")
				input(type="submit", name="btn-submit", value="Actualizar Registro" class="btn btn-success")
				a(href="/app/imagenes" class="btn btn-default" style="margin-left: 15px;") Volver
				img(src="https://upload.wikimedia.org/wikipedia/commons/thumb/d/d9/Node.js_logo.svg/1200px-Node.js_logo.svg.png" style="width: auto; height: 50px; margin: 0 auto; display: flex; float: right;")